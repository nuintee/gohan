// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String     @id
  username        String  @unique 
  email           String  @unique 
  registered_at   DateTime
  activities      Activity[] 
}

model Activity { 
  id            Int     @id @default(autoincrement()) 
  user_id       String 
  user          User?   @relation(fields: [user_id], references: [id]) 
  place_id      String
  is_liked      Boolean
  discovered_at DateTime
}